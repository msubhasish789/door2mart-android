        android:supportsRtl="true"
        android:theme="@style/Theme.Door2Mart" >
        <activity
            android:name=".ViewOrder"
            android:exported="false" />
        <activity
            android:name=".PlaceOrder"
            android:exported="false" />
        <activity
            android:name=".Account"
            android:exported="false" />
        <activity
            android:name=".LoginUser"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cart_pg"
            android:exported="false" />
